{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run no build",
            "type": "shell",
            "command": "build/build.gb",
            "problemMatcher": [],
            "presentation": {
                "clear": true,
                "panel": "dedicated",
                "reveal": "never"
            },
        },
        {
            "label": "run clean",
            "dependsOrder": "sequence",
            "dependsOn": ["clean", "build", "run"],
            "problemMatcher": [],
            "presentation": {
                "clear": true,
                "panel": "dedicated",
                "reveal": "never"
            },
        },
        {
            "label": "run",
            "type": "shell",
            "command": "build/build.gb",
            "dependsOn": ["build"],
            "problemMatcher": [],
            "presentation": {
                "clear": true,
                "panel": "dedicated",
                "reveal": "never"
            },
        },
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "presentation": {
                "clear": true,
                "panel": "dedicated"
            },
            "problemMatcher": [
              "$rgbdserror",
              "$rgbdslinkerror"
            ]
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "make clean",
            "presentation": {
                "clear": true,
                "panel": "dedicated"
            },
            "problemMatcher": [
              "$rgbdserror",
              "$rgbdslinkerror"
            ]
        },
        {
            "label": "Launch Emulicious",
            "type": "shell",
            "command": "../../emulicious/Emulicious.exe",
            "presentation": {
                "clear": false,
                "panel": "dedicated"
            },
            "problemMatcher": [
              "$rgbdserror",
              "$rgbdslinkerror"
            ]
        }
    ]
}